<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Developer Skills</title>
</head>
<body>
  <a href="/">Home</a>
        <h1>Skills</h1>
        <ul>
          <% skills.forEach(function(s, idx) { %>
            <li>
              <form action="/skills/<%= idx %>?_method=DELETE"
                class="delete-form" method="POST">
                <button type="submit">X</button>
                <a href="/skills/<%=idx %>"><%= s.skill %></a>
              
                - 
              <%= s.learned ? 'Skill Learned' : 'Skill Not Learned' %>
            </li>
          <% }); %>
        </ul>
        <a href="/skills/new">Add Skill</a>
</body>
</html>